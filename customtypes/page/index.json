{
  "id": "page",
  "label": "Page",
  "format": "page",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID",
          "placeholder": ""
        }
      },
      "category": {
        "type": "Link",
        "config": {
          "label": "Category",
          "select": "document",
          "repeat": false,
          "customtypes": ["page_category"]
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "open_positions": {
              "type": "SharedSlice"
            },
            "contact": {
              "type": "SharedSlice"
            },
            "team": {
              "type": "SharedSlice"
            },
            "text_media": {
              "type": "SharedSlice"
            },
            "separator": {
              "type": "SharedSlice"
            },
            "pricing": {
              "type": "SharedSlice"
            },
            "benefits": {
              "type": "SharedSlice"
            },
            "stats": {
              "type": "SharedSlice"
            },
            "blog": {
              "type": "SharedSlice"
            },
            "call_to_action": {
              "type": "SharedSlice"
            },
            "features": {
              "type": "SharedSlice"
            },
            "logotypes": {
              "type": "SharedSlice"
            },
            "hero": {
              "type": "SharedSlice"
            },
            "testimonials": {
              "type": "SharedSlice"
            },
            "spacer": {
              "type": "SharedSlice"
            },
            "rich_text": {
              "type": "SharedSlice"
            }
          }
        }
      }
    },
    "SEO & Metadata": {
      "meta_title": {
        "type": "Text",
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        }
      },
      "meta_description": {
        "type": "Text",
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        }
      },
      "meta_keywords": {
        "type": "Text",
        "config": {
          "label": "Meta Keywords",
          "placeholder": ""
        }
      },
      "meta_image": {
        "type": "Image",
        "config": {
          "label": "Meta Image",
          "constraint": {
            "width": 2400,
            "height": 1260
          },
          "thumbnails": []
        }
      },
      "meta_noindex": {
        "type": "Boolean",
        "config": {
          "label": "Don't Index",
          "placeholder_false": "false",
          "placeholder_true": "true",
          "default_value": false
        }
      }
    }
  }
}
